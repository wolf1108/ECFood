@{
    ViewData["Title"] = "註冊會員";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 text-success fw-bold">註冊會員</h2>
                    <p class="text-center text-muted mb-4">請填寫以下資料以建立帳號</p>

                    <form method="post" action="/Home/Register">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">使用者名稱</label>
                            <input name="UserName" class="form-control rounded-pill px-3 py-2" placeholder="請輸入您的名稱" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">電子郵件</label>
                            <input name="Email" type="email" class="form-control rounded-pill px-3 py-2" placeholder="example@mail.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">密碼</label>
                            <input name="Password" type="password" class="form-control rounded-pill px-3 py-2" placeholder="請設定密碼" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">確認密碼</label>
                            <input name="ConfirmPassword" type="password" class="form-control rounded-pill px-3 py-2" placeholder="再次輸入密碼" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-pill py-2 fw-semibold">
                                註冊
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <span>已經有帳號了嗎？</span>
                            <a href="/Home/Login" class="btn btn-outline-secondary rounded-pill ms-2">登入</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
